#!/bin/sh
#

if [ ! -r $1 ]; then
exit 1
fi

cat $1 | while read line; do
        set x $line
        shift
        if [ "$1" = "MOUNT" ]; then
                shift
                mountpoint=/var/media/ftp/$1
		echo $mountpoint | grep '\.\.' > /dev/null || continue
                shift
                mountopts=$*
                mount $mountopts $mountpoint
        fi
done
